---
import ThemeSwitcher from '../components/ThemeSwitcher';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'AlphaNest - AI-driven trading bot for financial singularity' } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/AlphaNest';

// Get current path for active link highlighting
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: `${baseUrl}/`, label: 'Home' },
  { href: `${baseUrl}/arbitrage`, label: 'Arbitrage' },
  { href: `${baseUrl}/statistics`, label: 'Statistics' },
  { href: `${baseUrl}/discussions`, label: 'Discussions' },
  { href: `${baseUrl}/development-board`, label: 'Board' },
  { href: `${baseUrl}/create-issue`, label: 'Create Issue' },
  { href: `${baseUrl}/docs`, label: 'Docs' },
  { href: `${baseUrl}/visualizer`, label: 'Visualizer' },
];

// Get deploy time and SHA from environment (set by CI)
const deployTime = new Date().toISOString();
const shortSha = process.env.GITHUB_SHA?.substring(0, 7) || 'dev';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <a href="#main-content" class="skip-to-content">
      Skip to content
    </a>
    
    <div class="drawer">
      <input id="drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col min-h-screen">
        <!-- Navbar -->
        <nav class="navbar bg-base-200 shadow-lg sticky top-0 z-50">
          <div class="navbar-start">
            <label for="drawer" class="btn btn-ghost btn-circle lg:hidden" aria-label="Open menu">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
              </svg>
            </label>
            <a href={`${baseUrl}/`} class="btn btn-ghost text-xl">
              AlphaNest
            </a>
          </div>
          <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1 gap-1">
              {navLinks.map(({ href, label }) => (
                <li>
                  <a 
                    href={href}
                    class={currentPath === href || currentPath === href + '/' ? 'active' : ''}
                  >
                    {label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          <div class="navbar-end">
            <ThemeSwitcher client:load />
            <a 
              href="https://github.com/cywf/AlphaNest" 
              target="_blank" 
              rel="noopener noreferrer"
              class="btn btn-ghost btn-circle ml-2"
              aria-label="GitHub repository"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          </div>
        </nav>

        <!-- Main content -->
        <main id="main-content" class="flex-1">
          <slot />
        </main>

        <!-- Footer -->
        <footer class="footer footer-center p-10 bg-base-200 text-base-content">
          <div class="grid grid-flow-col gap-4">
            <a href="https://github.com/cywf/AlphaNest" class="link link-hover">GitHub</a>
            <a href="https://github.com/cywf/AlphaNest/wiki" class="link link-hover">Wiki</a>
            <a href="https://github.com/cywf/AlphaNest/discussions" class="link link-hover">Discussions</a>
            <a href="https://github.com/cywf/AlphaNest/issues" class="link link-hover">Issues</a>
          </div>
          <div>
            <p>
              Licensed under 
              <a href="https://github.com/cywf/AlphaNest/blob/main/LICENSE" class="link link-primary">MIT License</a>
            </p>
            <p class="text-sm opacity-70">
              Deployed: {new Date(deployTime).toLocaleString()} | SHA: 
              <a 
                href={`https://github.com/cywf/AlphaNest/commit/${process.env.GITHUB_SHA || shortSha}`}
                class="link"
                target="_blank"
                rel="noopener noreferrer"
              >
                {shortSha}
              </a>
            </p>
          </div>
        </footer>
      </div>
      
      <!-- Drawer sidebar for mobile -->
      <div class="drawer-side z-50">
        <label for="drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu p-4 w-80 min-h-full bg-base-200">
          <li class="menu-title">Navigation</li>
          {navLinks.map(({ href, label }) => (
            <li>
              <a 
                href={href}
                class={currentPath === href || currentPath === href + '/' ? 'active' : ''}
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </body>
</html>
