---
import Layout from '../layouts/Layout.astro';
import MermaidViewer from '../components/MermaidViewer';
---

<Layout title="Visualizer - AlphaNest" description="View Mermaid diagrams of the AlphaNest architecture and workflows">
  <div class="container mx-auto px-4 py-12 max-w-7xl">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Project Visualizer</h1>
      <p class="text-lg opacity-70">Interactive Mermaid diagrams showing architecture, workflows, and data flows</p>
    </div>
    
    <MermaidViewer client:load />
  </div>
</Layout>
