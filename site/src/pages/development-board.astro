---
import Layout from '../layouts/Layout.astro';
import DevelopmentBoardComponent from '../components/DevelopmentBoard';
---

<Layout title="Development Board - AlphaNest" description="View the AlphaNest project development board">
  <div class="container mx-auto px-4 py-12 max-w-7xl">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Development Board</h1>
      <p class="text-lg opacity-70">Track progress on ongoing work and upcoming features</p>
      <div class="mt-4">
        <a 
          href="https://github.com/users/cywf/projects/69/views/1" 
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary"
        >
          View Full Project on GitHub
        </a>
      </div>
    </div>
    
    <DevelopmentBoardComponent client:load />
  </div>
</Layout>
