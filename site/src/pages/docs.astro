---
import Layout from '../layouts/Layout.astro';

// Get all markdown files from /docs
const docs = [
  { title: 'Architecture Overview', slug: 'architecture', path: '/docs/AlphaNest-Architecture-Overview.md' },
  { title: 'Wiki', slug: 'wiki', path: '/docs/wiki.md' },
];
---

<Layout title="Documentation - AlphaNest" description="Browse AlphaNest documentation">
  <div class="container mx-auto px-4 py-12 max-w-6xl">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Documentation</h1>
      <p class="text-lg opacity-70">Comprehensive guides and references for AlphaNest</p>
    </div>

    <div class="grid lg:grid-cols-4 gap-8">
      <!-- Sidebar -->
      <aside class="lg:col-span-1">
        <div class="card bg-base-200 shadow-xl sticky top-24">
          <div class="card-body">
            <h2 class="card-title text-lg mb-4">Documentation</h2>
            <ul class="menu menu-compact">
              {docs.map((doc) => (
                <li>
                  <a href={`/AlphaNest/docs/${doc.slug}`}>{doc.title}</a>
                </li>
              ))}
            </ul>
            <div class="divider"></div>
            <div class="text-sm">
              <p class="font-semibold mb-2">External Resources</p>
              <ul class="space-y-2">
                <li>
                  <a href="https://github.com/cywf/AlphaNest/blob/main/GETTING_STARTED.md" target="_blank" rel="noopener noreferrer" class="link link-hover">
                    Getting Started
                  </a>
                </li>
                <li>
                  <a href="https://github.com/cywf/AlphaNest/blob/main/IMPLEMENTATION_SUMMARY.md" target="_blank" rel="noopener noreferrer" class="link link-hover">
                    Implementation Summary
                  </a>
                </li>
                <li>
                  <a href="https://github.com/cywf/AlphaNest/wiki" target="_blank" rel="noopener noreferrer" class="link link-hover">
                    GitHub Wiki
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </aside>

      <!-- Main content -->
      <main class="lg:col-span-3">
        <div class="card bg-base-200 shadow-xl">
          <div class="card-body prose prose-invert max-w-none">
            <h2>Available Documentation</h2>
            <p>Select a document from the sidebar to view its contents.</p>
            
            <div class="not-prose grid gap-4 mt-6">
              {docs.map((doc) => (
                <a 
                  href={`/AlphaNest/docs/${doc.slug}`}
                  class="card bg-base-100 shadow hover:shadow-lg transition-shadow"
                >
                  <div class="card-body">
                    <h3 class="card-title">{doc.title}</h3>
                    <div class="card-actions justify-end">
                      <button class="btn btn-sm btn-primary">Read â†’</button>
                    </div>
                  </div>
                </a>
              ))}
            </div>

            <div class="alert alert-info mt-8">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="font-bold">Contributing to Documentation</h3>
                <div class="text-sm">
                  To add or update documentation, place Markdown files in the <code>/docs/</code> directory of the repository.
                  The site will automatically discover and render them.
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>
